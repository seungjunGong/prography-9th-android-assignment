<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/loading_background" /> <!-- 빨간색 -->
        </shape>
    </item>
    <item
        android:width="20dp"
        android:height="20dp"
        android:gravity="center">
        <rotate
            android:drawable="@drawable/ic_indicator"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360" />
    </item>
</layer-list>